<!DOCTYPE html>
<% include header.ejs %>
<!--<% include headerTimepicker.ejs %>-->

<div class="container services">
<div class="well jumbotron">
<h1><%= title %></h1>
</div>
        <form action="/hw/editHW?homework_uuid=<%= result[0]._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="selectCourse">Course Name</label>
                  <input  class="form-control" name="courseName" id="InputselectCourse" readonly value="<%= result[0].courseName %>">
                </div>
                <div class="form-group">
                  <label for="homeworkName">Homework Name</label>
                  <input class="form-control" name="homeworkName" id="InputhomeworkName" oninvalid="setCustomValidity('This field is required.');" oninput="setCustomValidity('');" placeholder="Homework Name" value="<%= result[0].homeworkName %>" required>
                </div>
                <div class="form-group">
                <label for="dueDate">Due Date</label>
                  <div class="input-group date" id="datetimepicker1">
                      <input type="text" class="form-control" name="dueDate" id="InputDueDate" oninvalid="setCustomValidity('This date format is wrong.');" oninput="setCustomValidity('');" value="<%= result[0].dueDate %>" required>
                      <span id="calendarInEditHW" class="input-group-addon">
                          <span class="glyphicon glyphicon-calendar"></span>
                      </span>
                  </div>
                </div>
                <div class="form-group">
                  <label for="hwPercentage">Percentage</label>
                  <input  class="form-control" name="percentage" id="InputhwPercentage" placeholder="Percentage" oninvalid="setCustomValidity('This field is required.');" oninput="setCustomValidity('');" value="<%= result[0].percentage %>" required>
                </div>
                <div class="form-group">
                    <label for="hwFileExtension">Attached Filename</label>
                    <input  class="form-control" name="fileExtension" id="InputhwFileExtension" placeholder="Attached Filename" oninvalid="setCustomValidity('This field is required.');" oninput="setCustomValidity('');"  value="<%= result[0].fileExtension %>" required> 
                  </div>
                <div class="form-group">
                  <label for="hwDescription">Homework Description</label></br>
                  <textarea rows="3" cols="50" name="homeworkDescription" oninvalid="setCustomValidity('This field is required.');" oninput="setCustomValidity('');" required><%= result[0].homeworkDescription %></textarea>
                </div>
                <div class="form-group">
                  <label for="hwTestScript">Upload Homework Test Script</label></br>
                    <input type="file" name="homeworkTestScript" style="display:none;" id="homeworkTestScript" accept="*" onchange="this.form.upfile.value=this.value.substr(this.value.lastIndexOf('\\')+1);">
                    <input type="button" class="btn btn-danger" value="Choose File" onclick="this.form.homeworkTestScript.click();">
                    <input type="text" name="upfile" size="20" readonly>
                </div>
                <div class="checkbox" >
                  <label>
                    <% let checked = result[0].dueDateExtension ? "checked" : "" %>
                    <input type="checkbox" name="dueDateExtension" id="dueDateExtension" <%= checked %>  > Can be delayed
                  </label>
                </div>
                <button type="submit" id="submitInEditHW" class="btn btn-info" class="btn btn-default">Submit</button>
        </form>
        <style>
          input:focus:invalid { 
            border-color: red; 
          }
        </style>
      </div>
<script type="text/javascript">
  $(function () {
      $('#datetimepicker1').datetimepicker({
          defaultDate:new Date()
      }); 
  });

 

</script>
</body>
</html>





